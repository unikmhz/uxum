<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="robots" content="noindex, nofollow">
    <title>{{ self.cfg.app_title() }} :: Index page</title>
    <style media="all">
      body { color: #ebdbb2; background-color: #1b1b1b; font-family: helvetica,tahoma,verdana,sans-serif; }
      a { color: #83a598; }
      a:visited { color: #559396; }
      div { display: inline-block; vertical-align: top; padding-right: 2em; }
    </style>
  </head>
  <body>
{% if let Some(name) = cfg.app_name %}
{% if let Some(version) = cfg.app_version %}
    <h3>{{ name }} {{ version }}</h3>
{% else %}
    <h3>{{ name }}</h3>
{% endif %}
{% endif %}
{% if let Some(title) = cfg.app_title %}
    <p>{{ title }}</p>
{% endif %}
    <p>This is just an index page for a deployed service, generated for your convenience.</p>
    <div>
      <h4>Contact details</h4>
      <ul>
{% if let Some(name) = cfg.contact_name %}
        <li>{{ name }}</li>
{% endif %}
{% if let Some(url) = cfg.contact_url %}
        <li><a href="{{ url }}">Link</a></li>
{% endif %}
{% if let Some(email) = cfg.contact_email %}
        <li><a href="mailto:{{ email }}">Contact e-mail</a></li>
{% endif %}
      </ul>
    </div>
    <div>
      <h4>Useful links</h4>
      <ul>
        <li><a href="{{ cfg.spec_path }}">Autogenerated OpenAPI specification</a></li>
{% if cfg.enable_ui %}
        <li><a href="{{ cfg.apidoc_path }}">API documentation UI</a></li>
{% endif %}
      </ul>
    </div>
  </body>
</html>
